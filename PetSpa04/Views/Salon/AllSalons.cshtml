@model IEnumerable<SalonListingViewModel>

    
@{
    ViewData["Title"] = "See all our salons!";
}


<div class="row">
   <h2 class="heading-margin text-center">@ViewBag.Title</h2>

    @foreach (var salon in Model)
    {
        <div class="col-md-6">
            <div class="card mb-3">
                <img src="@salon.Image" class="card-img-top" alt="@salon.NameOfSalon">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@salon.NameOfSalon</h5>
                    <p class="small text">@salon.City</p>
                    <p class="card-text">@salon.Description</p>
                    
                </div>
            </div>
        </div>
    }
    <br />
</div>
