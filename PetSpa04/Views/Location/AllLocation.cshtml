@model IEnumerable<LocationListingViewModel>

    
@{
    ViewData["Title"] = "See all of our locations!";
}


<div class="row">
   <h2 class="heading-margin text-center">@ViewBag.Title</h2>

    @foreach (var location in Model)
    {
        <div class="col-md-6">
            <div class="card mb-3">
                @*<img src="@service.ImageUrl" class="card-img-top" alt="@location.">*@
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@location.LocationTown</h5>
                    <p class="card-text">@location.Address</p>
                    @*<a asp-controller="Service" asp-action="Details" asp-route-id="@service.Id" class="btn btn-primary">Details about the @service.Name</a>*@
                </div>
            </div>
        </div>
    }
    <br />
</div>
