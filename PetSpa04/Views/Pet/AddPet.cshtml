@model AddPetFormModel

@{
    ViewData["Title"] = "Add your pet to our database!";
}

<div calss="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h2 class="heading-margin text-center">@ViewBag.Title</h2>

            <form method="post">

                <div class="form-group">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Please enter the name of your pet">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                </br>

                <div class="form-group">
                    <label asp-for="Breed" class="form-label"></label>
                    <input asp-for="Breed" class="form-control" placeholder="Please enter your pet's breed">
                    <span asp-validation-for="Breed" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Age" class="form-label"></label>
                    <input asp-for="Age" class="form-control" type="number" placeholder="Please enter your pet's age">
                    <span asp-validation-for="Age" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Weight" class="form-label"></label>
                    <input asp-for="Weight" class="form-control" type="number" step="any" placeholder="Please enter your pet's weight">
                    <span asp-validation-for="Weight" class="small text-danger"></span>
                </div>

                <input class="btn btn-primary mt-3" type="submit" value="Add Pet" />
            </form>
        </div>
    </div>
</div>

