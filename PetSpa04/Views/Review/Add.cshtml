@model AddReviewFormModel

@{
    ViewData["Title"] = "Add your review here!";
}

<div calss="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h2 class="heading-margin text-center">@ViewBag.Title</h2>

            <form method="post">

                <div class="form-group">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" placeholder="Please enter a title">
                </div>

                <div class="form-floating">
                    <select class="form-select" style="margin-top:1%">
                        <option selected>Grooming</option>
                        <option value="1">Hospital</option>
                        <option value="2">Hotel</option>
                        <option value="3">Spa</option>
                    </select>
                    <label for="floatingSelect">Pick the service</label>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl" class="form-label"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Your URL image here">
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Please write your review here</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Review..." rows="3"></textarea>
                </div>

                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>
