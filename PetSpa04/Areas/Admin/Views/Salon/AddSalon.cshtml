@using PetSpa04.Core.Models.Salons
@model AddSalonFormModel

@{
    ViewData["Title"] = "Add a salon to the database";
}

<div calss="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h2 class="heading-margin text-center">@ViewBag.Title</h2>

            <form method="post">

                <div class="form-group">
                    <label asp-for="NameOfSalon" class="form-label"></label>
                    <input asp-for="NameOfSalon" class="form-control" placeholder="Please enter the name of the salon">
                    <span asp-validation-for="NameOfSalon" class="small text-danger"></span>
                </div>
                </br>

                                <div class="form-group">
                    <label asp-for="Image" class="form-label"></label>
                    <input asp-for="Image" class="form-control" placeholder="Your URL image here">
                    <span asp-validation-for="Image" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="City" class="form-label"></label>
                    <input asp-for="City" class="form-control" placeholder="Please enter the city of the salon">
                    <span asp-validation-for="City" class="small text-danger"></span>
                </div>

                <div class="form-floating">
                    <select asp-for="LocationId" class="form-select" style="margin-top:1%">
                        @foreach (var location in Model.Locations)
                        {
                            <option value="@location.Id">@location.Name</option>
                        }
                    </select>
                    <label asp-for="LocationId">Pick the province/county</label>
                    <span asp-validation-for="LocationId" class="small text-danger"></span>
                </div>

                                <div class="form-group">
                    <label asp-for="Description" class="form-label">Please write a description</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Description..." rows="3"></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>

                <input class="btn btn-primary mt-3" type="submit" value="Add a Salon" />
            </form>
        </div>
    </div>
</div>

